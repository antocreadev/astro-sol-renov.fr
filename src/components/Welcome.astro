---
import astroLogo from "../assets/astro.svg";
import background from "../assets/background.svg";
import CtaSection from "./lovable/CtaSection";
import EmotionalSection from "./lovable/EmotionalSection";
import Footer from "./lovable/Footer";
import HeroSection from "./v0/HeroSection";
import ProcessSection from "./lovable/ProcessSection";
import ServicesSection from "./lovable/ServicesSection";
import StatsSection from "./lovable/StatsSection";
import TestimonialsSection from "./lovable/TestimonialsSection";
import ValuesSection from "./lovable/ValuesSection";
import VisionSection from "./lovable/VisionSection";
import WhySection from "./lovable/WhySection";
import Navbar from "./Navbar.astro";
---

<main
  class="min-h-screen bg-gradient-to-br from-slate-50 via-green-50 to-green-100"
  role="main"
  aria-label="Contenu principal - SolRenov rénovation énergétique"
>
  <Navbar />

  <!-- Sections avec structure sémantique SEO optimisée -->
  <section id="accueil" aria-label="Héro - Présentation SolRenov">
    <HeroSection client:load />
  </section>

  <section id="vision" aria-label="Notre vision de la rénovation énergétique">
    <VisionSection client:load />
  </section>

  <section
    id="problemes"
    aria-label="Problèmes énergétiques résolus par SolRenov"
  >
    <EmotionalSection client:load />
  </section>

  <section id="statistiques" aria-label="Chiffres clés et performance SolRenov">
    <StatsSection client:load />
  </section>

  <section
    id="services"
    aria-label="Services de rénovation énergétique proposés"
  >
    <ServicesSection client:load />
  </section>

  <section id="pourquoi-nous" aria-label="Avantages de choisir SolRenov">
    <WhySection client:load />
  </section>

  <section id="processus" aria-label="Processus de rénovation énergétique">
    <ProcessSection client:load />
  </section>

  <section id="valeurs" aria-label="Valeurs et engagements SolRenov">
    <ValuesSection client:load />
  </section>

  <section
    id="temoignages"
    aria-label="Témoignages clients rénovation énergétique"
  >
    <TestimonialsSection client:load />
  </section>

  <section
    id="contact"
    aria-label="Contact et devis gratuit rénovation énergétique"
  >
    <CtaSection client:load />
  </section>

  <footer aria-label="Pied de page SolRenov">
    <Footer client:load />
  </footer>
</main>
